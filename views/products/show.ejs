    <script src="https://cdn.tailwindcss.com"></script> -->
    <title> <%=foundedProduct.name%></title>
</head>
<body>
    <h1> <%= foundedProduct.name  %>  </h1>

    <ul>
        <li>
            <h4> Price :  <%= foundedProduct.price %>   </h4>
        </li>
        <li>
            <h4> author :  <%= foundedProduct.author %>   </h4>
        </li>
        <li>
            <h4> origin :  <%= foundedProduct.origin %>   </h4>
        </li>
        <li>
            <h4> pages :  <%= foundedProduct.pages %>   </h4>
        </li>
        <li>
            <h4> year :  <%= foundedProduct.year %>   </h4>
        </li>
        <li>
            <h4> available :  <%= foundedProduct.available %>   </h4>
        </li>
        
        <li>
            <h4> Category : <a href="/products?category=<%=foundedProduct.category%>"> <%= foundedProduct.category %>  </a> </h4>
        </li>
    </ul>
    <!-- <h4> id :  <%= foundedProduct._id %>   </h4> -->

    <a  href="/products"> <button class="rounded-md text-green-500 hover:cursor-pointer border-black hover:text-xl text-lg" > All Books</button></a>
